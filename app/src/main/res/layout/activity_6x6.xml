<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_bg" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_back_btn"
        android:src="@drawable/ic_back_24"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/person_a"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:background="@drawable/custom_user_bg"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:weightSum="3">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_x"/>

        <LinearLayout
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player: X"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/time_X"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10s"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/person_b"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:background="@drawable/custom_user_bg"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="30dp"
        android:weightSum="3">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_o"/>

        <LinearLayout
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player: O"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/time_O"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10s"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

